<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!--   ADD BUTTON ADDRESSED   -->
          <!-- ------------------------ -->
          <a href="books/add" class="btn btn-primary"><i class="fa fa-book" aria-hidden="true"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Title</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Edit</th>
                  <th class="text-center">Delete</th>
                </tr>
                </thead>
                <tbody>
                <!-- Retrieve object info  -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center">$<%= books[count].Title %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>
                  <td class="text-center">$<%= books[count].Price %></td>
                  
                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!--   EDIT BUTTON ADDRESSED  -->
                    <!-- ------------------------ -->
                    <a href="/books/edit/<%=books[count]._id %>" class= "btn btn-info btn-bm"> <i class="fa fa-pencil-square-o" aria-hidden="true">Edit</i></a>
                  </td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- DELETE BUTTON ADDRESSED  -->
                    <!-- ------------------------ -->
                    <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="fa fa-times" aria-hidden="true"></i>Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


